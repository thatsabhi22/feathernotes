<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You are deleting this note ?"
        android:id="@+id/deleteQuery"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/yes"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/deleteQuery"
        android:layout_alignEnd="@+id/deleteQuery" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/no"
        android:layout_alignTop="@+id/yes"
        android:layout_toLeftOf="@+id/yes"
        android:layout_toStartOf="@+id/yes" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/icon_small"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/deleteQuery"
        android:layout_toStartOf="@+id/deleteQuery"
        android:paddingRight="10dp" />

</RelativeLayout>
